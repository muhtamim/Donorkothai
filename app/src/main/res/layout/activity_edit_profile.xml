<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ff0303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/semi_round"
            android:backgroundTint="#d7d6d6"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"
                android:text="Name"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/half_lower_semi_round"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="Name"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />


            <LinearLayout
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp">

                <RadioGroup
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_white"
                    android:backgroundTint="#adfcfbfb"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"

                    >

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Male"

                        />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"

                        />
                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/bloodGrouplayout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/semi_round"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/bloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/BloodGroup">

                </Spinner>


            </LinearLayout>


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"
                android:text="Age"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/age"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/half_lower_semi_round"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="Age"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"
                android:text="Weight"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/half_lower_semi_round"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="weight (kg)"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"
                android:text="Last Donate Date"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/lastDonate"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/half_lower_semi_round"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:inputType="number"
                android:padding="10dp"
                android:text="last Donate Date"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:typeface="serif" />


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"
                android:text="Phone number"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/half_lower_semi_round"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="Phone number"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />


            <TextView
                android:visibility="gone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"
                android:text="Email"
                android:textColor="#fff" />

            <EditText
                android:visibility="gone"
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/half_lower_semi_round"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />


            <EditText
                android:id="@+id/pass"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_white"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif"
                android:visibility="gone" />


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"
                android:text="District and Thana"
                android:textColor="#fff" />

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/half_lower_semi_round"
                android:backgroundTint="#fff"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/semi_round"
                    android:backgroundTint="@color/colorAccent">

                    <Spinner
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/District">

                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/semi_round"
                    android:backgroundTint="@color/colorAccent">

                    <Spinner
                        android:id="@+id/thana"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </Spinner>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/save"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circle_white"
        android:backgroundTint="#01b307"
        android:text="Save"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>