<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:id="@+id/title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="Create a new account"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:typeface="serif"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="9"
        android:background="@drawable/semi_round"
        android:backgroundTint="#380202"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="9">


        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/round_white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            android:hint="Name"
            android:inputType="textNoSuggestions"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#413f3f"
            android:textSize="15sp"
            android:typeface="serif" />


        <LinearLayout
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"

            android:layout_weight=".5">

            <RadioGroup
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_white"
                android:backgroundTint="#adfcfbfb"
                android:orientation="horizontal"
                android:paddingRight="10dp"

                >

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male"

                    />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"

                    />
            </RadioGroup>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/bloodGrouplayout"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".5"
            android:background="@drawable/semi_round"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/bloodGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/BloodGroup">

            </Spinner>


        </LinearLayout>

        <EditText
            android:id="@+id/age"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            android:hint="Age"
            android:inputType="number"
            android:maxLength="3"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#413f3f"
            android:textSize="15sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            android:hint="weight (kg)"
            android:inputType="number"
            android:maxLength="3"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#413f3f"
            android:textSize="15sp"
            android:typeface="serif" />


        <TextView
            android:id="@+id/lastDonate"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text="last Donate Date"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:typeface="serif" />


        <EditText
            android:id="@+id/phone"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_white"
            android:drawableLeft="@drawable/phone38"
            android:drawablePadding="10dp"
            android:hint="Phone number"
            android:inputType="number"
            android:maxLength="13"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#413f3f"
            android:textSize="15sp"
            android:typeface="serif" />


        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_below="@+id/phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#413f3f"
            android:textSize="15sp"
            android:typeface="serif"
            android:visibility="gone" />


        <EditText
            android:id="@+id/pass"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_white"
            android:drawableLeft="@drawable/pass"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#413f3f"
            android:textSize="15sp"
            android:typeface="serif" />


        <LinearLayout

            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/semi_round">

            <Spinner
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/District">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/thanaLayout"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/semi_round">

            <Spinner
                android:id="@+id/thana"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </Spinner>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp">

        <Button
            android:id="@+id/signUp"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            android:background="@drawable/semi_round"
            android:backgroundTint="#b48a8a"
            android:text="SignUp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>


</LinearLayout>